<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>org.arig.robot</groupId>
    <artifactId>prehistobot-parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>ARIG Association - Prehistobot projects</name>
    <description>Projet parent des programmes pour la coupe de france de robotique 2014 (Pr√©histobot)</description>
    <inceptionYear>2014</inceptionYear>

    <properties>
        <!-- Build properties -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>${project.build.sourceEncoding}</project.reporting.outputEncoding>

        <build.java.version>1.7</build.java.version>

        <plugin.compiler.version>3.1</plugin.compiler.version>
        <plugin.jar.version>2.4</plugin.jar.version>
        <plugin.jacoco.version>0.6.3.201306030806</plugin.jacoco.version>
        <plugin.pmd.version>3.0.1</plugin.pmd.version>
        <plugin.findbugs.version>2.5.2</plugin.findbugs.version>
        <plugin.surefire.version>2.16</plugin.surefire.version>
        <plugin.checkstyle.version>2.10</plugin.checkstyle.version>
        <plugin.project.info.version>2.7</plugin.project.info.version>
        <plugin.jxr.version>2.3</plugin.jxr.version>
        <plugin.javadoc.version>2.9.1</plugin.javadoc.version>
        <plugin.taglist.version>2.4</plugin.taglist.version>

        <!-- Lib dependencies -->
        <lib.lombok.version>1.12.2</lib.lombok.version>
        <lib.spring.version>4.0.0.RELEASE</lib.spring.version>
        <lib.spring.security.version></lib.spring.security.version>
        <lib.spring.boot.version></lib.spring.boot.version>
        <lib.junit.version>4.11</lib.junit.version>
    </properties>

    <modules>
        <module>main-robot</module>
    </modules>

    <scm>
        <connection>scm:git:git://gitorious.org/arig-association/prehistobot.git</connection>
        <developerConnection>scm:git:ssh://git@gitorious.org/arig-association/prehistobot.git</developerConnection>
        <url>http://gitorious.org/arig-association/prehistobot</url>
    </scm>

    <distributionManagement>
        <site>
            <id>prehistobot-site</id>
            <name>Site</name>
            <url>site</url>
        </site>
    </distributionManagement>

    <developers>
        <developer>
            <id>mythril</id>
            <name>Gregory DEPUILLE</name>
            <timezone>+1</timezone>
            <email>gregory.depuille@gmail.com</email>
            <roles>
                <role>Architect</role>
                <role>Lead developper</role>
            </roles>
        </developer>

        <developer>
            <id>heiginko</id>
            <timezone>+1</timezone>
            <roles>
                <role>Developper</role>
            </roles>
        </developer>
    </developers>

    <dependencyManagement>
        <dependencies>
            <!-- Lombok -->
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${lib.lombok.version}</version>
                <scope>provided</scope>
            </dependency>

            <!-- Arig Robot Lib -->
            <dependency>
                <groupId>org.arig.robot</groupId>
                <artifactId>robot-system-lib-raspi</artifactId>
                <version>1.1.0-SNAPSHOT</version>
            </dependency>

            <!-- Tests -->
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-test</artifactId>
                <version>${lib.spring.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${lib.junit.version}</version>
                <scope>test</scope>
            </dependency>
        </dependencies>

    </dependencyManagement>
</project>