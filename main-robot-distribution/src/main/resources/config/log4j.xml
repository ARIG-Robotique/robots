<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM
        "/Users/mythril/Documents/workspace-java/prehistobot-parent/main-robot-distribution/src/main/resources/conf/log4j.dtd">
<log4j:configuration>

    <appender name="Console" class="org.apache.log4j.ConsoleAppender">
        <param name="Encoding" value="UTF-8" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] boot%X{context} - ${PID} %5p [%t] --- %c{1}: %m%n" />
        </layout>
    </appender>
    <appender name="AsyncConsole" class="org.apache.log4j.AsyncAppender">
        <param name="BufferSize" value="500"/>
        <appender-ref ref="Console"/>
    </appender>

	<!-- Déclaration d'un appender qui va stocker les traces dans un fichier texte.
		Le chemin d'accès à ce fichier peut-être soit absolu, soit relatif au répertoire de travail du serveur d'application. -->
	<appender name="ApplicationFile" class="org.apache.log4j.FileAppender">
		<param name="File" value="logs/${logFileName}.log" />
		<param name="Append" value="true" />
		<param name="Encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] boot%X{context} - ${PID} %5p [%t] --- %c{1}: %m%n" />
		</layout>
	</appender>
	<appender name="AsyncApplicationFile" class="org.apache.log4j.AsyncAppender">
		<param name="BufferSize" value="500"/>
		<appender-ref ref="ApplicationFile"/>
	</appender>

	<!-- ******************************** -->
	<!-- Configuration pour l'application -->
	<!-- ******************************** -->
	<logger name="org.springframework">
		<level value="INFO" />
	</logger>

	<logger name="org.arig">
		<level value="INFO" />
	</logger>

	<!-- *********** -->
	<!-- Root Logger -->
	<!-- *********** -->
	<root>
		<level value="ERROR" />
        <appender-ref ref="AsyncConsole" />
		<appender-ref ref="AsyncApplicationFile" />
	</root>
</log4j:configuration>
